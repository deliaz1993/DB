<%= f.fields_for :person_medications do |g| %>
  <tr class = "fields">
    <%= g.hidden_field :person_id, :value => @person.id %>
      <td>
        <p> Allergy </p>
        <%= g.collection_select :medication_id, Medication.all.order('name'), :id, :name %>
      </td> 

      <td>
        <p> Comments </p>
        <%= g.text_area :comments %>
      </td>

      <td>
        <%= g.link_to_remove "Remove" , :class => 'btn btn-danger'%>
      </td>
   </tr>
<% end %>
 