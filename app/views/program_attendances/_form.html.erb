<%= simple_form_for @program_attendance, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :program_enrollment_id %>
  <%= f.input :program_date_id %>
  <%= f.input :status, :collection => ProgramDate::STATUS_OPTIONS %>
  <%= f.input :comments %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                programs_path, :class => 'btn' %>
  </div>
<% end %>
