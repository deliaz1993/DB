<% @programs.each do|program| %>
<% if program.program_locations.empty? %>
  <p>&nbsp;&nbsp;<em>No Program Locations at this time</em></p>
  <p>&nbsp;</p>
  
<% else %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% program.program_locations.each do |program_location| %>
        <tr>
          <td><%= link_to program_location.name, program_location_path(program_location) %></td>
          <td><%= link_to "Attendance", program_dates_path(:id => program_location.id), :class => 'btn btn-mini' %>           
          <%= link_to "Enrollment", program_location_path(program), :class => 'btn btn-mini' %>
          <%= link_to "Employees", program_location_program_employees_path(:id => program_location.id), :class => 'btn btn-mini' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_program_location_path(program_location), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      program_location_path(program_location),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %></td>
         
         
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
<% end %>