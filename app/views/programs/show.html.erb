<%- model_class = Program -%>
<div class="page-header">
  <h1><%= @program.name %></h1>
</div>
<p> <strong> Description: </strong> <%= @program.description %> </p>

<h2> Program Locations </h2>
<%= render :partial => "program_locations" %>

<div class="form-actions">
  <%= link_to raw("<i class='icon-plus icon-white'></i> Add a New Program Location"), new_program_location_path, :class => 'btn btn-primary', :id => 'Create Program Location' %>
  <%= link_to t('.back', :default => t("helpers.links.back")),
              programs_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_program_path(@program), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              program_path(@program),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>