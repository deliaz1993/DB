<%= simple_form_for @program_employee, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :program_location_id %>
  <%= f.input :person_id %>
  <%= f.input :job_description %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                program_employees_path, :class => 'btn' %>
  </div>
<% end %>
