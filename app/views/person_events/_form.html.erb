<%= simple_form_for @person_event, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :event_id %>
  <%= f.input :person %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                person_events_path, :class => 'btn' %>
  </div>
<% end %>
